{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types"
        ],    
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
